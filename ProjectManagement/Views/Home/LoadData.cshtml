<div class="row g-3">
    <div class="col-12">
        <form class="card shadow" asp-action="LoadTeamMembersFromFile" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group pb-2">
                    <label for="formFile" class="form-label">Select File to Load Team Members</label>
                    <input class="form-control" type="file" id="file" name="file">
                </div>
                
                <div class="form-group">
                    <input type="submit" value="Load" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-12">
        <form class="card shadow" asp-action="LoadClientsFromFile" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group pb-2">
                    <label for="formFile" class="form-label">Select File to Load Clients</label>
                    <input class="form-control" type="file" id="file" name="file">
                </div>
                <div class="form-group">
                    <input type="submit" value="Load" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div class="col-12">
        <form class="card shadow" asp-action="LoadConsultantFromFile" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group pb-2">
                    <label for="formFile" class="form-label">Select File to Load Consultants</label>
                    <input class="form-control" type="file" id="file" name="file">
                </div>
                <p>@ViewBag.ConsultantsUploadError</p>
                <div class="form-group">
                    <input type="submit" value="Load" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

